<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/uploadPhotoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/secondry_color"
            android:text="Upload your photo"/>


        <ImageView
            android:id="@+id/photoUploadImage"
            android:layout_width="91dp"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:src="@drawable/baseline_file_upload_24" />

        <Spinner
            android:id="@+id/languageSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Select Language"
            android:minHeight="48dp"
            android:padding="8dp"
            android:spinnerMode="dropdown"
/>
        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Select Gender"
            android:minHeight="48dp"
            android:padding="8dp"
            android:spinnerMode="dropdown"
            />

        <Spinner
            android:id="@+id/countrySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Select Country"
            android:minHeight="48dp"
            android:padding="8dp"
            android:spinnerMode="dropdown"
            />
        <TextView
            android:id="@+id/AddDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textColor="@color/secondry_color"
            android:text="Describe yourself"
            />
        <EditText
            android:id="@+id/aboutYouEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="About You"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:layout_marginTop="25dp"
            android:gravity="top"
            android:minLines="3"
            android:maxLines="15"
            android:layout_marginBottom="26dp"
           />



        <Button
            android:id="@+id/saveProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:layout_marginTop="35dp"
            android:backgroundTint="@color/secondry_color"/>

    </LinearLayout>

</ScrollView>
