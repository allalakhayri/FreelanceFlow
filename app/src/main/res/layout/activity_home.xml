<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/join_us_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="29dp"
        android:textColor="@color/secondry_color"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Join us as a client or developer"/>

    <RadioButton
        android:id="@+id/client_checkbox"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@id/join_us_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="I'm a client \nLooking up for help with my projects"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4dp"
        />
    <RadioButton
        android:id="@+id/developer_checkbox"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@id/client_checkbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4dp"
        android:text="I'm a developer \n looking for projects to accomplish"/>


    <Button
        android:id="@+id/create_account_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/developer_checkbox"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/secondry_color"
        android:text="Create an account"/>

    <TextView
        android:id="@+id/login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_account_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textColor="@color/primary_color"
        android:text="Already have an account? Log In "
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4dp" />


</RelativeLayout>
